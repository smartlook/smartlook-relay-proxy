{
	"compilerOptions": {
		"target": "ES2021",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./build",
		"removeComments": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["./src"],
	"exclude": ["./node_modules", "./build"]
}
